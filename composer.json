{
  "name": "lsvh/ssr-components",
  "description": "Server Side Rendering (SSR) Components for PHP front-end development.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Luuk S. van Houdt",
      "email": "info@lsvh.org"
    }
  ],
  "scripts": {
    "test": "vendor/bin/phpunit --configuration phpunit.xml",
    "test:watch": "vendor/bin/phpunit-watcher watch --configuration phpunit.xml"
  },
  "require": {
    "php": "^7.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^9",
    "spatie/phpunit-watcher": "^1.22"
  },
  "autoload": {
    "psr-4": {
      "LSVH\\SSRComponents\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "LSVH\\SSRComponents\\Tests\\": "tests/"
    }
  }
}
